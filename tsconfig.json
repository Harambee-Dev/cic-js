{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist.browser",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2016", "dom", "es5"],
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "scripts",
    "tests"
  ],
  "include": [
    "src/*",
    "src/bancor/abi/*",
    "index.ts"
  ]
}
